<p id="notice"><%= notice %></p>

<h1>Tasks <i class="fa fa-list-ol" aria-hidden="true"></i>
 </h1>

<table class="table table striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.due_date %></td>
        <td><%= link_to 'Show', task, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class:' btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

